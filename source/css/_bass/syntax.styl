.entry-content
  .gist
    background color-code
    border 1px solid color-border
    margin-top 15px
    padding 7px 15px
    border-radius 2px
    text-shadow 0 0 1px #000
    line-height 1.6
    overflow auto
    color color-code
    .gist-file
      border none
      font-family inherit
      margin 0
      font-size 0.9em
      .gist-data
        background none
        border-bottom none
        pre
          padding 0 !important
          font-family font-mono

      .gist-meta
        background none
        color color-meta
        margin-top 5px
        padding 0
        text-shadow 0 0 1px #000
        font-size 100%
        a
          color color-link
          &:visited
            color color-link

figure.highlight
  background color-code-background
  border 1px solid color-border
  margin 0
  padding 7px 15px
  border-radius 2px
  text-shadow 0 0 1px #000
  line-height 1.6
  overflow auto
  position relative
  font-size 0.9em
  figcaption
    color color-meta
    margin-bottom 5px
    text-shadow 0 0 1px #000
    a
      position absolute
      right 15px

  pre
    background none
    border none
    padding 0
    margin 0

  table
    margin-top 0
    border-spacing 0

  th
    font-weight: normal
    border-bottom: 0
    padding-bottom: 0

  td
    border-bottom: 0
    padding: 0

  .gutter
    color color-meta
    padding-right: 20px
    text-align left

  .code
    color color-code

pre
  // Theme: Monokai Sublime
  // More theme here: http://softwaremaniacs.org/media/soft/highlight/test.html
  .strong
  .emphasis
    color: #a8a8a2

  .bullet
  .quote
  .number
  .regexp
  .literal
  .link
    color: #ae81ff

  .code
  .title
  .section
  .selector-class
    color: #a6e22e

  .strong
    font-weight: bold

  .emphasis
    font-style: italic

  .keyword
  .selector-tag
  .name
  .attr
    color: #f92672

  .symbol
  .attribute
    color: #66d9ef

  .params
  .class .title
    color: color-code

  .string
  .type
  .built_in
  .builtin-name
  .selector-id
  .selector-attr
  .selector-pseudo
  .addition
  .variable
  .template-variable
    color: #e6db74

  .comment
  .deletion
  .meta
    color: #75715e
